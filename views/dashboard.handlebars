<section>
    <h2 class="dashboard-title">Your Dashboard</h2>
    <h3>Create New Post</h3>
    <form class="new-post-form">
        <div>
            <label for='posts-title'>Title</label>
            <input type="text" id="posts-title" name="posts-title" />
        </div>
        <div>
            <label for="posts-text">About Post</label>
            <textarea name="posts-text"></textarea> 
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
    {{#if posts.length}}
    <section>
        <h3>Your Posts</h3>
        <ol>
             {{#each posts as |post|}}
            <li>
            {{> posts-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
    {{/if}}
</section>
<script src="/javascript/add-posts.js"></script>