<section>
    <div class="new-post">
        <h2 class="dashboard-title">Your Dashboard</h2>
        <h3 class="title">Create New Post</h3>
    </div>
    <form class="new-post-form">
        <div>
            <label for='posts-title'>Title: </label>
            <input type="text" id="posts-title" name="posts-title" />
        </div>
        <div class="post-textarea">
            <label for="posts-text">About Post: </label>
            <textarea name="posts-text"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
    {{#if posts.length}}
    <section class="your-posts">
        <h3>Your Posts</h3>
        <ol class="posts-list list-group">
            {{#each posts as |post|}}
            <li class="list-item">
                {{> posts-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
    {{/if}}
</section>
<script src="/javascript/add-posts.js"></script>